extends layout

block content
  h1= hash
  
  ul
  - block_list.sort(function(a, b) {let textA = a.hash.toUpperCase(); let textB = b.hash.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
  each block in block_list
    li 
      a(href=block.url) #{block.hash} 

  else
    li There are no blocks.
