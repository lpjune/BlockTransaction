extends layout

block content

  h1 #{hash}: #{block.hash}

  p #[strong prevHash:] #{block.prevHash}
  p #[strong Cost:] #{block.cost}

  hr


  p Do you really want to delete this Block?

  form(method='POST' action='')
    div.form-group
      input#id.form-control(type='hidden' name='id' required='true', value=block._id )

    button.btn.btn-primary(type='submit') Delete